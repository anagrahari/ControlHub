<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:text="Control Hub is the central interface to manage your organization, manage your users, assign services, view usage analytics, and more."
            android:textSize="15dp"
            android:textStyle="italic"
        />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Overview"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="Provides an overview of the services that are active or available. Notifications indicate new features or necessary account maintenance. You can use the navigation menu to access different parts of Control Hub."

            android:textSize="15dp"
            android:textStyle="italic"
            android:paddingBottom="7dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Users"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="You have quick access to all the users in your organization. The Status indicates if they have activated their account. If the user hasnâ€™t activated their account after being invited, you can click  and select Resend Invitation."

            android:textSize="15dp"
            android:textStyle="italic"
            android:paddingBottom="7dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Services"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="Set up and configure cloud and hybrid services, and see if they are active or inactive. Depending on how your organization is set up, different services might be under the Cloud or Hybrid section."

            android:textSize="15dp"
            android:textStyle="italic"
            android:paddingBottom="7dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Places"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="A place contains one or more Cisco Webex devices that are in a common area like a lunch room, lobby, or conference room. You can set up shared Cisco Webex devices in these places, add services, and then watch the collaboration happen."
            android:textSize="15dp"
            android:textStyle="italic"
            android:paddingBottom="7dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Settings"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="Configure and customize organization-wide settings for Cisco Webex. There are more Webex Meetings settings you can set up if you Manage Your Webex Meetings Site in Cisco Webex Control Hub."

            android:textSize="15dp"
            android:textStyle="italic"
            android:paddingBottom="7dp"/>
    </LinearLayout>

</LinearLayout>
